root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 4

[*.conf]
indent_style = space
indent_size = 4

[*.sh]
indent_style = tab
indent_size = 4

[Dockerfile]
indent_style = tab

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
